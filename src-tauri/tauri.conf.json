{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "z4-launcher",
  "version": "0.1.0",
  "identifier": "com.z4.z4-launcher",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "resizable": true,
        "title": "z4-launcher",
        "width": 980,
        "height": 552,
        "center": true,
        "minWidth": 980,
        "minHeight": 552,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU1NEQ1QUM3MDMwNzJCQTkKUldTcEt3Y0R4MXBOVmFGVHlCNTVFdlcxVjcwWGxqb2xUWTE1bWJQdm9DeTFpbitaOTlrellVc3gK",
      "endpoints": [
        "http://localhost:3000/api/v1/update?current_version={{current_version}}&target={{target}}&arch={{arch}}"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}